<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1743015690822-1" author="yasiravcibasi">
        <createTable tableName="task">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_task"/>
            </column>
            <column name="silindi" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="olusturulma_zamani" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="son_guncelleme_zamani" type="DATETIME"/>
            <column name="olusturan_kullanici_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="son_guncelleyen_kullanici_id" type="BIGINT"/>
            <column name="versiyon" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="due_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="progress" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="comments" type="json"/>
            <column name="history" type="json"/>
            <column name="assigned_by_id" type="BIGINT"/>
            <column name="assigned_to_id" type="BIGINT"/>
            <column name="status" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="assigned_by_id" baseTableName="task" constraintName="FK_TASK_ON_ASSIGNEDBY" referencedColumnNames="id" referencedTableName="kullanici"/>
        <addForeignKeyConstraint baseColumnNames="assigned_to_id" baseTableName="task" constraintName="FK_TASK_ON_ASSIGNEDTO" referencedColumnNames="id" referencedTableName="kullanici"/>
    </changeSet>
</databaseChangeLog>